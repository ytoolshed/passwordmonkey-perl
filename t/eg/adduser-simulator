#!/usr/local/bin/perl -w
###########################################
# adduser-simulator simulator
###########################################
use strict;
use Term::ReadKey;

$|=1;
print "$0\n";
print "Copying files from `/etc/skel' ...\n";
print "Enter new UNIX password: ";

ReadMode 2;
my $pw1 = <>;
ReadMode 1;

print "\nRetype new UNIX password: ";

ReadMode 2;
my $pw2 = <>;
ReadMode 1;

print "\n";

if( $pw1 !~ /\S/ ) {
    die "Empty password";
}

if( $pw1 ne $pw2 ) {
    die "Passwords didn't match\n";
}

1;
